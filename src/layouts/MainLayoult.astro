<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-body);
    background-color: var(--background-dark);
    color: var(--text-primary-dark);
    overflow-x: hidden;
  }

  body::selection {
    background-color: var(--primary);
    color: var(--background-dark);
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  button,
  nav,
  .font-display {
    font-family: var(--font-display);
  }

  p {
    margin: 0;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  button {
    border: none;
    background: none;
    cursor: pointer;
    font-family: var(--font-display);
  }

  img {
    max-width: 100%;
    height: auto;
    display: block;
  }

  .layout-root {
    position: relative;
    min-height: 100vh;
    width: 100%;
    display: flex;
    flex-direction: column;
  }
</style>
