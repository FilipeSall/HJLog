---
import "../styles/tema.css";
---

<html class="dark" lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO Meta Tags -->
    <title>HJLOG - Transporte e Logística | Especialistas em Shows e Eventos</title>
    <meta name="description" content="HJLOG: Há mais de 10 anos transportando equipamentos para shows e eventos pelo Brasil. Especialistas em logística para bandas renomadas, estruturas de palco e sistemas audiovisuais. Parceiro Magalu em operações B2B." />
    <meta name="keywords" content="transporte de eventos, logística de shows, equipamentos de palco, transporte rodoviário, logística B2B, distribuição Magalu, transporte São Paulo, equipamentos audiovisuais" />
    <meta name="author" content="HJLOG Transportes" />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://hjlogtransportes.com.br/" />
    <meta property="og:title" content="HJLOG - Transporte e Logística | Especialistas em Shows e Eventos" />
    <meta property="og:description" content="Há mais de 10 anos transportando equipamentos para shows e eventos. Especialistas em bandas renomadas, estruturas de palco e sistemas audiovisuais. Parceiro Magalu em operações B2B." />
    <meta property="og:image" content="https://hjlogtransportes.com.br/og-image.jpg" />
    <meta property="og:locale" content="pt_BR" />
    <meta property="og:site_name" content="HJLOG Transportes" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://hjlogtransportes.com.br/" />
    <meta name="twitter:title" content="HJLOG - Transporte e Logística | Especialistas em Shows e Eventos" />
    <meta name="twitter:description" content="Há mais de 10 anos transportando equipamentos para shows e eventos. Especialistas em bandas renomadas, estruturas de palco e sistemas audiovisuais. Parceiro Magalu em operações B2B." />
    <meta name="twitter:image" content="https://hjlogtransportes.com.br/og-image.jpg" />

    <!-- Geolocalização e Negócio Local -->
    <meta name="geo.region" content="BR-SP" />
    <meta name="geo.placename" content="São Paulo" />
    <meta name="geo.position" content="-23.504914;-46.691264" />
    <meta name="ICBM" content="-23.504914, -46.691264" />

    <!-- Canonical URL -->
    <link rel="canonical" href="https://hjlogtransportes.com.br/" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Structured Data - Organization -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "HJLOG Transportes",
        "url": "https://hjlogtransportes.com.br",
        "logo": "https://hjlogtransportes.com.br/logo.png",
        "description": "Empresa de transporte rodoviário especializada em shows e eventos há mais de 10 anos. Transporte de equipamentos para bandas renomadas e operações B2B para Magalu.",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Avenida Dep Emilio Carlos 114 Sala 08",
          "addressLocality": "São Paulo",
          "addressRegion": "SP",
          "postalCode": "02720-000",
          "addressCountry": "BR"
        },
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+55-11-98221-7679",
          "contactType": "customer service",
          "areaServed": "BR",
          "availableLanguage": "Portuguese"
        },
        "sameAs": [
          "https://www.instagram.com/hjlogtransportes/",
          "https://www.facebook.com/hjlogtransportes"
        ]
      }
    </script>

    <!-- Structured Data - Local Business -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "HJLOG Transportes",
        "image": "https://hjlogtransportes.com.br/logo.png",
        "@id": "https://hjlogtransportes.com.br",
        "url": "https://hjlogtransportes.com.br",
        "telephone": "+55-11-98221-7679",
        "priceRange": "$$",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Avenida Dep Emilio Carlos 114 Sala 08",
          "addressLocality": "São Paulo",
          "addressRegion": "SP",
          "postalCode": "02720-000",
          "addressCountry": "BR"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": -23.504914,
          "longitude": -46.691264
        },
        "openingHoursSpecification": {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": [
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday"
          ],
          "opens": "08:00",
          "closes": "18:00"
        }
      }
    </script>

    <!-- Fontes -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Open+Sans:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <div class="layout-root">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-body);
    background-color: var(--background-dark);
    color: var(--text-primary-dark);
    overflow-x: hidden;
  }

  body::selection {
    background-color: var(--primary);
    color: var(--background-dark);
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  button,
  nav,
  .font-display {
    font-family: var(--font-display);
  }

  p {
    margin: 0;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  button {
    border: none;
    background: none;
    cursor: pointer;
    font-family: var(--font-display);
  }

  img {
    max-width: 100%;
    height: auto;
    display: block;
  }

  .layout-root {
    position: relative;
    min-height: 100vh;
    width: 100%;
    display: flex;
    flex-direction: column;
  }
</style>
