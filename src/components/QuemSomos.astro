---
import ValorCard from "./ValorCard.astro";
import { nossosValoresData } from "../data/quem-somos";
import logoVetorizada from "../images/logo-vetorizada.svg";
---

<section class="quem-somos" id="quemsomos">
  <div class="quem-somos__content">
    <p class="quem-somos__content-title">
      A <span>HJLog Transportes</span> conecta empresas com soluções logísticas completas.
      Vai além do simples ato de entregar, movemos <span>
        confiança, experiência e excelência</span
      > em cada trajeto.
    </p>

    <div class="cards-wrapper">
      {
        nossosValoresData?.map((card) => (
          <ValorCard icon={card.icon} text={card.text} title={card.title} />
        ))
      }
    </div>
  </div>
  <img src={logoVetorizada.src} class="logo-vetorizada" />
</section>

<style>
  .quem-somos {
    width: 99.6dvw;
    left: calc((100% - 100vw) / 2);
    background: #1e1e1e80;
    background-image: linear-gradient(
      115deg,
      rgba(30 30 30 / 0.85) 0%,
      rgba(30 30 30 / 0.7) 40%,
      rgba(30 30 30 / 0.5) 50%,
      var(--tema-acao-destaque-suave) 100%
    );
    backdrop-filter: blur(0.875rem);
    -webkit-backdrop-filter: blur(0.875rem);
    z-index: -1;
    position: relative;
    overflow: hidden;
  }
  .quem-somos__content {
    width: 100%;
    max-width: 83.5rem;
    margin: 0 auto;
    text-align: center;
    color: var(--tema-texto-claro-primario);
  }

  .quem-somos__content-title {
    font-size: var(--tamanho-fonte-subtitulo);
    padding: 2.6875rem 0;
    font-family: var(--tipografia-fonte-primaria);
  }

  .quem-somos__content-title > span {
    font-weight: bolder;
  }

  .cards-wrapper {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-bottom: 24px;
  }

  .logo-vetorizada {
    position: absolute;
    top: 0%;
    margin-left: 63%;
  }
</style>
