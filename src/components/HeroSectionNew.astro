---
import { heroData } from "../data/hero-new";
---

<section id="inicio" class="hero-section">
  <div class="hero-background">
    <div class="hero-overlay"></div>
    <img src={heroData.backgroundImage} alt={heroData.backgroundAlt} class="hero-image" />
  </div>

  <div class="container hero-content">
    <div class="hero-text">
      <div class="hero-badge">
        <span class="pulse-dot"></span>
        <span class="badge-text">{heroData.badge}</span>
      </div>

      <h1 class="hero-title">
        {heroData.title}<span class="highlight">{heroData.titleHighlight}</span>
      </h1>

      <p class="hero-description">
        {heroData.description}
      </p>

      <div class="hero-cta">
        <button class="btn btn-primary btn-large">
          {heroData.ctaPrimary}
        </button>
        <button class="btn btn-secondary btn-large">
          {heroData.ctaSecondary}
        </button>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    width: 100%;
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to right, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.5), transparent);
    z-index: 10;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-content {
    position: relative;
    z-index: 20;
    padding-top: 5rem;
    padding-bottom: 5rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .hero-text {
    max-width: 720px;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    background-color: rgba(255, 107, 0, 0.2);
    backdrop-filter: blur(4px);
    border: 1px solid rgba(255, 107, 0, 0.3);
    width: fit-content;
  }

  .pulse-dot {
    width: 0.5rem;
    height: 0.5rem;
    border-radius: 50%;
    background-color: var(--tema-acao-destaque);
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .badge-text {
    color: var(--tema-acao-destaque);
    font-size: 0.75rem;
    font-weight: var(--peso-fonte-bold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .hero-title {
    color: var(--paleta-branco-absoluto);
    font-size: 2.25rem;
    font-weight: 900;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 3rem;
    }
  }

  @media (min-width: 1024px) {
    .hero-title {
      font-size: 3.75rem;
    }
  }

  .highlight {
    color: var(--tema-acao-destaque);
  }

  .hero-description {
    color: #e5e5e5;
    font-size: 1rem;
    line-height: 1.75;
    max-width: 560px;
  }

  @media (min-width: 768px) {
    .hero-description {
      font-size: 1.125rem;
    }
  }

  .hero-cta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    padding-top: 1rem;
  }

  .btn-large {
    height: 3rem;
    padding-left: 2rem;
    padding-right: 2rem;
  }

  .btn-primary.btn-large {
    box-shadow: 0 0 20px rgba(255, 107, 0, 0.4);
  }
</style>
