<div class="form-container">
  <form class="form">
    <div class="input-wrapper">
      <input
        type="text"
        name="nome"
        class="input"
        required
        data-placeholder="Nome"
      />
      <span class="placeholder-text">Nome <span class="asterisk">*</span></span>
    </div>
    <div class="input-wrapper">
      <input
        type="email"
        name="email"
        class="input"
        required
        data-placeholder="Email"
      />
      <span class="placeholder-text">Email <span class="asterisk">*</span></span
      >
    </div>
    <div class="input-wrapper">
      <input
        type="tel"
        name="whatsapp"
        class="input"
        required
        data-placeholder="Whatsapp"
      />
      <span class="placeholder-text"
        >Whatsapp <span class="asterisk">*</span></span
      >
    </div>
    <textarea name="mensagem" placeholder="Mensagem" class="textarea"
    ></textarea>
    <button type="submit" class="submit-btn">Fale conosco</button>
  </form>
</div>

<style>
  .form-container {
    width: 50%;
    display: flex;
    justify-content: center;
  }

  .form {
    display: flex;
    flex-direction: column;
    width: 75%;
    gap: 15px;
  }

  .input-wrapper {
    position: relative;
    width: 100%;
  }

  .placeholder-text {
    position: absolute;
    left: 20px;
    top: 50%;
    transform: translateY(-50%);
    color: #494949;
    font-family: var(--tipografia-fonte-primaria);
    font-size: 16px;
    pointer-events: none;
  }

  .placeholder-text .asterisk {
    color: #eb5757;
  }

  .input-wrapper .input:focus + .placeholder-text,
  .input-wrapper .input:not(:placeholder-shown) + .placeholder-text {
    opacity: 0;
  }

  .input,
  .textarea {
    border: 1px solid #d8d8d8;
    border-radius: 8px;
    padding: 20px;
    color: #494949;
    background-color: #ffffff;
    width: 100%;
    font-size: 16px;
  }

  .input {
    height: 64px;
    width: 100%;
  }

  .textarea {
    min-height: 150px;
  }

  .textarea::placeholder {
    color: #494949;
    font-family: var(--tipografia-fonte-primaria);
    font-size: 16px;
  }

  .submit-btn {
    border-radius: 8px;
    height: 60px;
    font-size: 20px;
    color: #ffffff;
    background-color: #ff6b00;
    border: none;
    font-weight: bolder;
    cursor: pointer;
  }
</style>

<script>
  if (typeof window !== "undefined") {
    const handlePlaceholders = () => {
      const inputs = document.querySelectorAll<HTMLInputElement>(
        ".input-wrapper .input",
      );

      inputs.forEach((input) => {
        const placeholderSpan = input.nextElementSibling as HTMLElement | null;
        if (!placeholderSpan) return;

        const setOpacity = () => {
          placeholderSpan.style.opacity = input.value.length > 0 ? "0" : "1";
        };

        input.addEventListener("input", setOpacity);
        input.addEventListener("focus", setOpacity);
        input.addEventListener("blur", setOpacity);

        setOpacity();
      });
    };

    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", handlePlaceholders);
    } else {
      handlePlaceholders();
    }
  }
</script>
