---
import { howItWorksDetails } from "../data/how-it-works";
---

<section id="como-funciona" class="how-it-works-section">
  <div class="container">
    <div class="section-intro">
      <span class="section-badge">Processo Simplificado</span>
      <h2 class="section-title">Como enviamos sua carga</h2>
    </div>

    <div class="steps-container">
      <!-- Line connector for desktop -->
      <div class="connector-line"></div>

      {howItWorksDetails.map((step) => (
        <div class="step-item">
          <div class={`step-icon ${step.step === 4 ? 'step-icon-final' : ''}`}>
            <span class="material-symbols-outlined">{step.icon}</span>
          </div>
          <h3 class="step-title">{step.step}. {step.title}</h3>
          <p class="step-description">{step.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .how-it-works-section {
    width: 100%;
    padding: 5rem 0;
    background-color: var(--paleta-branco-absoluto);
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
  }

  .section-intro {
    text-align: center;
    max-width: 42rem;
    margin: 0 auto 4rem;
  }

  .section-badge {
    color: var(--tema-acao-destaque);
    font-weight: var(--peso-fonte-bold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 0.875rem;
  }

  .section-title {
    font-size: 1.875rem;
    font-weight: var(--peso-fonte-bold);
    color: var(--tema-texto-escuro-primario);
    margin-top: 0.5rem;
  }

  @media (min-width: 768px) {
    .section-title {
      font-size: 2.25rem;
    }
  }

  .steps-container {
    position: relative;
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .steps-container {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .connector-line {
    display: none;
  }

  @media (min-width: 768px) {
    .connector-line {
      display: block;
      position: absolute;
      top: 3rem;
      left: 0;
      width: 100%;
      height: 2px;
      background-color: #e5e5e5;
      z-index: 0;
    }
  }

  .step-item {
    position: relative;
    z-index: 10;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .step-icon {
    width: 6rem;
    height: 6rem;
    border-radius: 50%;
    background-color: var(--tema-fundo-base-claro);
    border: 4px solid var(--paleta-branco-absoluto);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
  }

  .step-icon .material-symbols-outlined {
    font-size: 2.5rem;
    color: var(--tema-texto-escuro-primario);
  }

  .step-icon-final {
    background-color: var(--tema-acao-destaque);
    box-shadow: 0 10px 15px -3px rgba(255, 107, 0, 0.3);
  }

  .step-icon-final .material-symbols-outlined {
    color: var(--paleta-branco-absoluto);
  }

  .step-title {
    font-size: 1.125rem;
    font-weight: var(--peso-fonte-bold);
    color: var(--tema-texto-escuro-primario);
    margin-bottom: 0.5rem;
  }

  .step-description {
    font-size: 0.875rem;
    color: var(--tema-texto-secundario);
    line-height: 1.6;
  }
</style>
