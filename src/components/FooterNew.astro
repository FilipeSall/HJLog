---
import { externalLinks } from "../data/navigation";
import { contatoInfo } from "../data/contato";
import { Image } from "astro:assets";
import logo from "../images/logo.png";
---

<footer class="footer">
  <div class="container footer-content">
    <div class="footer-grid">
      <!-- Brand -->
      <div class="footer-brand">
        <a href="#inicio" class="brand-logo-link">
          <Image src={logo} alt="HJLOG Transportes" class="brand-logo-image" />
        </a>
        <p class="brand-description">
          Soluções inteligentes em transporte e logística para impulsionar o seu negócio em todo o Brasil.
        </p>
        <div class="social-links">
          {externalLinks.map(link => {
            const iconName = typeof link.label === 'object' ? link.label.alt : '';
            let materialIcon = '';

            if (iconName.toLowerCase().includes('facebook')) {
              materialIcon = 'facebook';
            } else if (iconName.toLowerCase().includes('whatsapp')) {
              materialIcon = 'chat';
            } else if (iconName.toLowerCase().includes('instagram')) {
              materialIcon = 'photo_camera';
            }

            return (
              <a href={link.path} target={link.target} class="social-link" aria-label={iconName}>
                <span class="material-symbols-outlined">{materialIcon}</span>
              </a>
            );
          })}
        </div>
      </div>

      <!-- Links 1 - Empresa -->
      <div class="footer-column">
        <h3 class="column-title">Empresa</h3>
        <ul class="footer-links">
          <li><a href="#quemsomos">Sobre Nós</a></li>
          <li><a href="#">Carreiras</a></li>
          <li><a href="#">Notícias</a></li>
          <li><a href="#">Sustentabilidade</a></li>
        </ul>
      </div>

      <!-- Links 2 - Serviços -->
      <div class="footer-column">
        <h3 class="column-title">Serviços</h3>
        <ul class="footer-links">
          <li><a href="#servicos">Carga Lotação</a></li>
          <li><a href="#servicos">Carga Fracionada</a></li>
          <li><a href="#servicos">Armazenagem</a></li>
          <li><a href="#servicos">E-commerce</a></li>
        </ul>
      </div>

      <!-- Contact -->
      <div class="footer-column">
        <h3 class="column-title">Contato</h3>
        <ul class="contact-list">
          {contatoInfo.map(info => {
            let icon = 'location_on';
            if (info.label.includes('@')) icon = 'mail';
            if (info.label.includes('(')) icon = 'call';

            return (
              <li class="contact-item">
                <span class="material-symbols-outlined">{icon}</span>
                <span>{info.label}</span>
              </li>
            );
          })}
        </ul>
      </div>
    </div>

    <div class="footer-bottom">
      <p class="copyright">© 2024 HJLOG Transportes. Todos os direitos reservados.</p>
      <div class="footer-bottom-links">
        <a href="#">Termos de Uso</a>
        <a href="#">Política de Privacidade</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    width: 100%;
    background-color: var(--tema-fundo-base-claro);
    border-top: 1px solid #e5e5e5;
    padding-top: 4rem;
    padding-bottom: 2rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    margin-bottom: 4rem;
  }

  @media (min-width: 768px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .footer-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .brand-logo-link {
    display: inline-block;
    text-decoration: none;
  }

  .brand-logo-image {
    height: 2.5rem;
    width: auto;
  }

  @media (min-width: 768px) {
    .brand-logo-image {
      height: 3rem;
    }
  }

  .brand-description {
    font-size: 0.875rem;
    color: var(--tema-texto-secundario);
    line-height: 1.6;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background-color: #e5e5e5;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--tema-texto-secundario);
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .social-link:hover {
    background-color: var(--tema-acao-destaque);
    color: var(--paleta-branco-absoluto);
  }

  .social-link .material-symbols-outlined {
    font-size: 1.25rem;
  }

  .column-title {
    font-weight: var(--peso-fonte-bold);
    color: var(--tema-texto-escuro-primario);
    margin-bottom: 1rem;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-links a {
    font-size: 0.875rem;
    color: var(--tema-texto-secundario);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-links a:hover {
    color: var(--tema-acao-destaque);
  }

  .contact-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .contact-item {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--tema-texto-secundario);
  }

  .contact-item .material-symbols-outlined {
    font-size: 1rem;
    margin-top: 0.125rem;
  }

  .footer-bottom {
    border-top: 1px solid #e5e5e5;
    padding-top: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
    font-size: 0.75rem;
    color: var(--tema-texto-secundario);
  }

  @media (min-width: 768px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .footer-bottom-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-bottom-links a {
    color: var(--tema-texto-secundario);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-bottom-links a:hover {
    color: var(--tema-acao-destaque);
  }
</style>
