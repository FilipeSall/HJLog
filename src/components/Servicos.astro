---
import Image from "astro/components/Image.astro";
import { servicosData, servicosImages } from "../data/servicos";
import ServicoItem from "./ServicoItem.astro";
import mainImg from "../images/servicos/main.png";
---

<section class="nossos-servicos" id="servicos">
  <div class="nossos-servicos__inner">
    <h2 class="title">Serviços</h2>
    <div class="servicos-content">
      <Image src={mainImg} alt="Caminhao estacionado" />

      <div class="servicos-wrapper">
        {servicosData.map((servico) => <ServicoItem {...servico} />)}
      </div>
    </div>
    <div class="img-wrapper">
      {
        servicosImages.map((image, index) => (
          <div class="servico-image">
            <Image
              src={image}
              alt={`Imagem do serviço ${index + 1}`}
              loading="lazy"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .nossos-servicos {
    width: 100%;
    display: flex;
    flex-direction: column;
    color: var(--tema-texto-claro-primario);
    background-color: var(--tema-fundo-secundario-escuro);
  }

  .nossos-servicos__inner {
    width: 100%;
    display: flex;
    gap: 30px;
    max-width: 83.5rem;
    flex-direction: column;
    margin: 0 auto;
  }

  .title {
    font-size: var(--tamanho-fonte-titulo-principal);
    margin-top: 30px;
  }

  .servicos-content {
    display: flex;
    gap: 33px;
  }

  .servicos-wrapper {
    display: flex;
    flex-direction: column;
    gap: 63px;
  }

  .img-wrapper {
    display: flex;
    width: 100%;
    gap: 33px;
    justify-content: space-between;
    margin: 25px 0;
  }

  .servico-image {
    width: 100%;
  }

  .servico-image > img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: drop-shadow(4px 6px 6.3px 1px #00000040;);
  }
</style>
