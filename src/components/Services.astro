<style>
  .services {
    width: 100%;
    padding: var(--space-20) 0;
    background-color: var(--background-light);
  }

  .dark .services {
    background-color: var(--background-dark);
  }

  .container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 var(--space-4);
    display: flex;
    flex-direction: column;
    gap: var(--space-12);
  }

  @media (min-width: 768px) {
    .container {
      padding-left: var(--container-padding-tablet);
      padding-right: var(--container-padding-tablet);
    }
  }

  @media (min-width: 1024px) {
    .container {
      padding-left: var(--container-padding-desktop);
      padding-right: var(--container-padding-desktop);
    }
  }

  .header {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-end;
    gap: var(--space-6);
  }

  @media (min-width: 768px) {
    .header {
      flex-direction: row;
    }
  }

  .title-wrapper {
    max-width: 600px;
  }

  h2 {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    color: var(--text-primary-light);
    letter-spacing: var(--tracking-tight);
    margin-bottom: var(--space-4);
  }

  @media (min-width: 768px) {
    h2 {
      font-size: var(--text-4xl);
    }
  }

  .dark h2 {
    color: var(--white);
  }

  .subtitle {
    color: var(--text-secondary-light);
    font-size: var(--text-lg);
    line-height: var(--leading-normal);
  }

  .dark .subtitle {
    color: var(--text-tertiary-dark);
  }

  .view-all {
    color: var(--text-primary-light);
    font-weight: var(--font-bold);
    display: flex;
    align-items: center;
    gap: var(--space-1);
    transition: text-decoration var(--transition-base);
  }

  .dark .view-all {
    color: var(--primary);
  }

  .view-all:hover {
    text-decoration: underline;
    text-decoration-thickness: 2px;
    text-underline-offset: 4px;
  }

  .view-all .material-symbols-outlined {
    font-size: 14px;
  }

  .services-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6);
  }

  @media (min-width: 768px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .service-card {
    position: relative;
    overflow: hidden;
    border-radius: var(--radius-xl);
    background-color: var(--white);
    border: 1px solid var(--border-light);
    box-shadow: var(--shadow-sm);
    transition: box-shadow var(--transition-base);
  }

  .dark .service-card {
    background-color: var(--surface-dark);
    border-color: var(--border-dark);
  }

  .service-card:hover {
    box-shadow: var(--shadow-xl), var(--shadow-primary-sm);
  }

  .image-wrapper {
    position: relative;
    height: 12rem;
    width: 100%;
    background-color: var(--border-light);
    overflow: hidden;
  }

  .dark .image-wrapper {
    background-color: var(--border-dark);
  }

  .image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .service-card:hover .image-wrapper img {
    transform: scale(1.05);
  }

  .icon-badge {
    position: absolute;
    top: var(--space-4);
    right: var(--space-4);
    background-color: var(--white);
    padding: var(--space-2);
    border-radius: var(--radius-full);
    box-shadow: var(--shadow-lg);
  }

  .dark .icon-badge {
    background-color: var(--black);
  }

  .icon-badge .material-symbols-outlined {
    color: var(--primary);
    font-size: 24px;
  }

  .card-content {
    padding: var(--space-6);
  }

  h3 {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--text-primary-light);
    margin-bottom: var(--space-2);
  }

  .dark h3 {
    color: var(--white);
  }

  .card-content p {
    color: var(--text-secondary-light);
    font-size: var(--text-sm);
    margin-bottom: var(--space-4);
    line-height: var(--leading-normal);
  }

  .dark .card-content p {
    color: var(--text-tertiary-dark);
  }

  .learn-more {
    display: inline-flex;
    align-items: center;
    font-size: var(--text-sm);
    font-weight: var(--font-bold);
    color: var(--text-primary-light);
    transition: color var(--transition-base);
  }

  .dark .learn-more {
    color: var(--white);
  }

  .service-card:hover .learn-more {
    color: var(--primary);
  }

  .learn-more .material-symbols-outlined {
    font-size: 16px;
    margin-left: var(--space-1);
  }
</style>
