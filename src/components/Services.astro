---
import { services } from "../data/services";
---

<section class="services-section" id="services">
  <div class="services-container">
    <div class="services-header">
      <div>
        <h2 class="services-tagline">
          {services.heading.tagline}
        </h2>
        <h3 class="services-title">
          {services.heading.title}
        </h3>
      </div>
      <a class="services-cta" href={services.heading.ctaHref}>
        {services.heading.ctaLabel}
        <span class="material-symbols-outlined services-cta-icon"
          >arrow_forward</span
        >
      </a>
    </div>

    <div class="services-grid">
      {
        services.items.map((service, index) => {
          const isTopRow = index < 2;
          const isLeftCol = index % 2 === 0;

          return (
            <div
              class:list={[
                "service-card",
                isTopRow ? "service-card--top-row" : "",
                isLeftCol ? "service-card--left-col" : "",
              ]}
            >
              <img
                alt={service.imageAlt}
                class="service-card-image"
                src={service.image}
                style={index === 2 ? "object-position: bottom;" : ""}
              />
              <div class="service-card-overlay" />
              <div class="service-card-content">
                <div class="service-card-icon">
                  <span class="material-symbols-outlined">
                    {service.icon}
                  </span>
                </div>
                <h4 class="service-card-title">
                  {service.title}
                </h4>
                <p class="service-card-description">
                  {service.description}
                </p>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</section>

<style>
  .services-section {
    padding: var(--space-24) 0;
    background-color: rgba(42, 42, 42, 0.2);
    position: relative;
    border-top: 1px solid var(--surface-dark);
  }

  .services-container {
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 var(--space-4);
    position: relative;
    z-index: 10;
  }

  @media (min-width: 640px) {
    .services-container {
      padding: 0 var(--space-6);
    }
  }

  @media (min-width: 1024px) {
    .services-container {
      padding: 0 var(--space-8);
    }
  }

  .services-header {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: var(--space-16);
    gap: var(--space-6);
  }

  @media (min-width: 768px) {
    .services-header {
      flex-direction: row;
    }
  }

  .services-tagline {
    color: var(--primary);
    font-family: var(--font-display);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    margin-bottom: var(--space-2);
    font-size: var(--text-sm);
  }

  .services-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    color: var(--text-primary-dark);
    text-transform: uppercase;
  }

  .services-cta {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    color: var(--text-primary-dark);
    border-bottom: 1px solid var(--surface-dark);
    padding-bottom: var(--space-1);
    transition: color var(--transition-base), border-color var(--transition-base);
  }

    .services-cta:hover {
    color: var(--primary);
    border-bottom-color: var(--primary);
  }

  .services-cta-icon {
    font-size: var(--text-lg);
    transition: transform var(--transition-base);
  }

  .services-cta:hover .services-cta-icon {
    transform: translateX(0.25rem);
  }

  .services-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0;
  }

  @media (min-width: 1024px) {
    .services-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  .service-card {
    position: relative;
    height: 320px;
    overflow: hidden;
  }

  .service-card--top-row {
    border-bottom: 1px solid var(--surface-dark);
  }

  .service-card--left-col {
    border-right: 1px solid var(--surface-dark);
  }

  .service-card-image {
    position: absolute;
    inset: 0;
    height: 100%;
    width: 100%;
    object-fit: cover;
    transition: transform 700ms cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0.4;
  }

  .service-card:hover .service-card-image {
    transform: scale(1.1);
    opacity: 0.6;
  }

  .service-card-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      var(--background-dark),
      rgba(17, 17, 17, 0.6),
      transparent
    );
  }

  .service-card-content {
    position: absolute;
    bottom: 0;
    left: 0;
    padding: var(--space-8);
    width: 100%;
  }

  .service-card-icon {
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--space-4);
    background-color: var(--surface-dark);
    color: var(--text-primary-dark);
    border: 1px solid var(--border-dark);
    transition: background-color var(--transition-base), color var(--transition-base), border-color var(--transition-base);
    font-size: var(--text-2xl);
  }

  .service-card:hover .service-card-icon {
    background-color: var(--primary);
    color: var(--background-dark);
    border-color: var(--primary);
  }

  .service-card-title {
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    color: var(--text-primary-dark);
    text-transform: uppercase;
    margin-bottom: var(--space-2);
  }

  .service-card-description {
    color: var(--text-secondary-dark);
    font-size: var(--text-sm);
    max-width: 28rem;
    opacity: 0;
    transform: translateY(1rem);
    transition: opacity var(--transition-base), transform var(--transition-base);
  }

  .service-card:hover .service-card-description {
    opacity: 1;
    transform: translateY(0);
  }
</style>
