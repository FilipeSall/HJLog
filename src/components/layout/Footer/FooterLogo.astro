---
import logo from "../../../images/newlogo.webp";

interface Props {
  description: string;
}

const { description } = Astro.props;
---

<div class="footer-column">
  <div class="logo-container">
    <img
      src={logo.src}
      alt="HJLOG Logo"
      class="footer-logo"
    />
  </div>
  <p class="footer-description">
    {description}
  </p>
</div>

<style>
  .footer-column {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  /* Logo Section */
  .logo-container {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .footer-logo {
    height: 2.5rem;
    width: auto;
  }

  /* Company Description */
  .footer-description {
    font-size: var(--text-sm);
    color: var(--text-secondary-dark);
    max-width: 20rem;
    line-height: var(--leading-relaxed);
  }
</style>
