---
import logo from "../../../images/newlogo.webp";
import { Image } from "astro:assets";

interface Props {
  description: string;
}

const { description } = Astro.props;
---

<div class="footer-column">
  <div class="logo-container">
    <Image
      src={logo}
      alt="HJLOG Logo"
      class="footer-logo"
      width={100}
      height={40}
    />
  </div>
  <p class="footer-description">
    {description}
  </p>
</div>

<style>
  .footer-column {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  /* Seção do logo */
  .logo-container {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .footer-logo {
    height: 2.5rem;
    width: auto;
  }

  /* Descrição da empresa */
  .footer-description {
    font-size: var(--text-sm);
    color: var(--text-secondary-dark);
    max-width: 20rem;
    line-height: var(--leading-relaxed);
  }
</style>
