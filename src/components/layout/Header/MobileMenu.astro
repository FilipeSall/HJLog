---
interface Link {
  label: string;
  href: string;
}

interface Props {
  links: Link[];
}

const { links } = Astro.props;
const currentPath = Astro.url.pathname;

const isActive = (href: string) => {
  if (href === "/" && currentPath === "/") return true;
  if (href !== "/" && currentPath.startsWith(href)) return true;
  return false;
};
---

<div id="mobile-menu" class="mobile-menu">
  <div class="mobile-menu-links">
    {
      links.map((link) => (
        <a
          href={link.href}
          class={isActive(link.href) ? "nav-link nav-link-active" : "nav-link"}
        >
          {link.label}
        </a>
      ))
    }
  </div>

  <button
    type="button"
    class="mobile-area-cliente-btn"
    id="open-area-cliente-mobile"
  >
    Área do Cliente
  </button>
</div>

<style>
  .mobile-menu {
    display: none;
    flex-direction: column;
    gap: 1.5rem;
    background-color: rgba(17, 17, 17, 0.98);
    border-bottom: 1px solid var(--border-dark);
    padding: 1.5rem;
    animation: fadeIn var(--transition-base);
  }

  .mobile-menu-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .mobile-menu--open {
    display: flex;
  }

  .nav-link {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.025em;
    transition: color 150ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .nav-link-active {
    color: var(--text-primary-dark);
  }

  .nav-link-active:hover {
    color: var(--primary);
  }

  .nav-link:not(.nav-link-active) {
    color: var(--text-secondary-dark);
  }

  .nav-link:not(.nav-link-active):hover {
    color: var(--text-primary-dark);
  }

  .mobile-area-cliente-btn {
    width: 100%;
    height: 2.75rem;
    background-color: var(--primary);
    color: var(--background-dark);
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: 0.5rem;
    border: none;
    cursor: pointer;
    font-family: var(--font-display);
    transition: all 0.2s;
    margin-top: 0.5rem;
  }

  .mobile-area-cliente-btn:hover {
    background-color: var(--white);
    color: var(--background-dark);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-0.5rem);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Consultas de mídia */
  @media (min-width: 768px) {
    .mobile-menu {
      display: none !important;
    }
  }
</style>

<script>
  if (typeof window !== 'undefined') {
    const mobileAreaClienteBtn = document.getElementById('open-area-cliente-mobile');

    mobileAreaClienteBtn?.addEventListener('click', () => {
      const modal = document.getElementById('area-cliente-modal');
      const mobileMenu = document.getElementById('mobile-menu');
      const menuButton = document.querySelector('.menu-button');

      if (modal) {
        modal.classList.add('active');
        document.body.style.overflow = 'hidden';

        // Fecha o menu mobile
        if (mobileMenu) {
          mobileMenu.classList.remove('mobile-menu--open');
        }
        if (menuButton) {
          menuButton.setAttribute('aria-expanded', 'false');
        }
      }
    });
  }
</script>
