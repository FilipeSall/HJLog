---
interface Props {
  ctaHref: string;
  ctaLabel: string;
}

const { ctaHref, ctaLabel } = Astro.props;
---

<div class="header-actions">
  <a
    href={ctaHref}
    class="cta-button"
  >
    {ctaLabel}
  </a>
  <button
    class="menu-button"
    type="button"
    aria-expanded="false"
    aria-controls="mobile-menu"
  >
    <span class="material-symbols-outlined">menu</span>
  </button>
</div>

<style>
  .header-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .cta-button {
    display: none;
    height: 2.5rem;
    align-items: center;
    justify-content: center;
    border-radius: 0.5rem;
    background-color: var(--white);
    padding: 0 1.5rem;
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--background-dark);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: transform 150ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .cta-button:hover {
    background-color: #e5e5e5;
  }

  .menu-button {
    color: var(--text-primary-dark);
    display: inline-flex;
  }

  /* Media queries */
  @media (min-width: 640px) {
    .cta-button {
      display: flex;
    }
  }

  @media (min-width: 768px) {
    .menu-button {
      display: none;
    }
  }
</style>
