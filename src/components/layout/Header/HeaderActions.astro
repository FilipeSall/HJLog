---
import { Icon } from "astro-icon/components";

interface Props {
  ctaHref: string;
  ctaLabel: string;
}

const { ctaHref, ctaLabel } = Astro.props;
---

<div class="header-actions">
  <button
    type="button"
    class="cta-button"
    id="open-area-cliente"
  >
    {ctaLabel}
  </button>
  <button
    class="menu-button"
    type="button"
    aria-expanded="false"
    aria-controls="mobile-menu"
  >
    <Icon name="mdi:menu" />
  </button>
</div>

<style>
  .header-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .cta-button {
    display: none;
    height: 2.5rem;
    align-items: center;
    justify-content: center;
    border-radius: 0.5rem;
    background-color: var(--white);
    padding: 0 1.5rem;
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--background-dark);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: transform 150ms cubic-bezier(0.4, 0, 0.2, 1);
    border: none;
    cursor: pointer;
    font-family: var(--font-display);
  }

  .cta-button:hover {
    background-color: #e5e5e5;
  }

  .menu-button {
    color: var(--text-primary-dark);
    display: inline-flex;
    font-size: 1.5rem;
  }

  .menu-button svg {
    width: 1em;
    height: 1em;
  }

  /* Consultas de m√≠dia */
  @media (min-width: 640px) {
    .cta-button {
      display: flex;
    }
  }

  @media (min-width: 768px) {
    .menu-button {
      display: none;
    }
  }
</style>

<script>
  if (typeof window !== 'undefined') {
    const areaClienteBtn = document.getElementById('open-area-cliente');

    areaClienteBtn?.addEventListener('click', () => {
      const modal = document.getElementById('area-cliente-modal');
      if (modal) {
        modal.classList.add('active');
        document.body.style.overflow = 'hidden';
      }
    });
  }
</script>
