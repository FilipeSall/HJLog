---
import logo from "../../../images/newlogo.webp";
import { Image } from "astro:assets";
---

<div class="header-logo">
  <a href="/" class="logo-link">
    <Image
      src={logo}
      alt="HJLOG Logo"
      class="logo-img"
      loading="eager"
      decoding="async"
      width={100}
      height={40}
    />
  </a>
</div>

<style>
  .header-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .logo-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .logo-img {
    height: 2.5rem;
    width: auto;
  }
</style>
