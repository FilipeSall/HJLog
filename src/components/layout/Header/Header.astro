---
import { navigation } from "../../../data/navigation";
import HeaderLogo from "./HeaderLogo.astro";
import HeaderNav from "./HeaderNav.astro";
import HeaderActions from "./HeaderActions.astro";
import MobileMenu from "./MobileMenu.astro";
---

<div class="header-wrapper">
  <nav class="header-nav">
    <HeaderLogo />
    <HeaderNav links={navigation.links} />
    <HeaderActions
      ctaHref={navigation.cta.href}
      ctaLabel={navigation.cta.label}
    />
  </nav>
  <MobileMenu links={navigation.links} />
</div>

<style>
  .header-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    display: flex;
    justify-content: center;
    padding: 0;
  }

  .header-nav {
    background: rgba(17, 17, 17, 0.95);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    display: flex;
    width: 100%;
    max-width: 1280px;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid var(--border-dark);
    padding: 1rem 1.5rem;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    transition: all 300ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Consultas de m√≠dia */
  @media (min-width: 640px) {
    .header-wrapper {
      padding: 0 1.5rem;
      padding-top: 1rem;
      padding-bottom: 1rem;
    }

    .header-nav {
      border: 1px solid var(--border-dark);
    }
  }
</style>

<script>
  if (typeof window !== "undefined") {
    const menuButton = document.querySelector(".menu-button");
    const mobileMenu = document.querySelector("#mobile-menu");
    if (menuButton && mobileMenu) {
      menuButton.addEventListener("click", () => {
        const isOpen = mobileMenu.classList.toggle("mobile-menu--open");
        menuButton.setAttribute("aria-expanded", String(isOpen));
        const iconSvg = menuButton.querySelector("svg");
        if (iconSvg) {
          const useElement = iconSvg.querySelector("use");
          if (useElement) {
            const currentHref = useElement.getAttribute("href") || "";
            if (isOpen) {
              useElement.setAttribute("href", currentHref.replace("mdi:menu", "mdi:close"));
            } else {
              useElement.setAttribute("href", currentHref.replace("mdi:close", "mdi:menu"));
            }
          }
        }
      });
    }
  }
</script>
