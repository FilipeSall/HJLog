---
import { cta } from "../data/cta";
---

<section class="cta-section">
  <div class="cta-background"></div>

  <div class="cta-container">
    <h2 class="cta-title">
      {cta.title}
    </h2>
    <p class="cta-description">
      {cta.description}
    </p>

    <form class="cta-form">
      <input
        class="cta-input"
        placeholder={cta.emailPlaceholder}
        type="email"
      />
      <button
        class="cta-button"
        type="button"
      >
        {cta.ctaLabel}
      </button>
    </form>

    <div class="cta-partners-section">
      <p class="cta-partners-title">
        {cta.partnersTitle}
      </p>

      <div class="cta-partners-grid">
        {
          cta.partners.map((partner) => (
            <div class="cta-partner-item">
              <span class="material-symbols-outlined">{partner.icon}</span>{" "}
              {partner.name}
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  /* ===== CTA Section Container ===== */
  .cta-section {
    position: relative;
    overflow: hidden;
    background-color: var(--surface-dark);
    padding: var(--space-24) 0;
  }

  /* Background texture overlay */
  .cta-background {
    position: absolute;
    inset: 0;
    opacity: 0.1;
    background-image: url('https://www.transparenttextures.com/patterns/carbon-fibre.png');
    pointer-events: none;
  }

  /* Main container */
  .cta-container {
    max-width: 56rem;
    margin: 0 auto;
    padding: 0 var(--space-4);
    text-align: center;
    position: relative;
    z-index: 10;
  }

  /* Title */
  .cta-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    color: var(--text-primary-dark);
    margin-bottom: var(--space-6);
    text-transform: uppercase;
    font-family: var(--font-display);
  }

  /* Description */
  .cta-description {
    color: var(--text-secondary-dark);
    margin-bottom: var(--space-10);
    font-size: var(--text-lg);
    font-weight: var(--font-light);
    font-family: var(--font-body);
  }

  /* Form */
  .cta-form {
    display: flex;
    flex-direction: column;
    gap: 0;
    max-width: 32rem;
    margin: 0 auto var(--space-16);
    box-shadow: var(--shadow-2xl);
  }

  /* Form Input */
  .cta-input {
    flex: 1;
    background-color: var(--background-light);
    color: var(--background-dark);
    padding: var(--space-4) var(--space-6);
    outline: none;
    border: none;
    font-weight: var(--font-medium);
    font-family: var(--font-body);
    transition: background-color var(--transition-base);
  }

  .cta-input::placeholder {
    color: #999999;
  }

  .cta-input:focus {
    ring: none;
    border: none;
    outline: none;
  }

  /* Form Button */
  .cta-button {
    background-color: var(--primary);
    color: var(--background-dark);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    padding: var(--space-4) var(--space-8);
    border: none;
    cursor: pointer;
    white-space: nowrap;
    font-family: var(--font-display);
    transition: background-color var(--transition-base);
  }

  .cta-button:hover {
    background-color: var(--white);
  }

  /* Partners Section */
  .cta-partners-section {
    padding-top: var(--space-8);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .cta-partners-title {
    font-size: var(--text-xs);
    font-weight: var(--font-bold);
    color: var(--text-secondary-dark);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    margin-bottom: var(--space-8);
    font-family: var(--font-display);
  }

  /* Partners Grid */
  .cta-partners-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-8);
    opacity: 0.4;
    filter: grayscale(100%);
    transition: all var(--transition-slow);
  }

  .cta-partners-grid:hover {
    opacity: 0.4;
    filter: grayscale(0%);
  }

  /* Partner Item */
  .cta-partner-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--text-primary-dark);
    font-weight: var(--font-bold);
    font-size: var(--text-lg);
    font-family: var(--font-display);
  }

  /* Responsive Design */
  @media (min-width: 640px) {
    .cta-title {
      font-size: var(--text-5xl);
    }

    .cta-form {
      flex-direction: row;
    }
  }

  @media (min-width: 768px) {
    .cta-partners-grid {
      gap: var(--space-16);
    }
  }
</style>
