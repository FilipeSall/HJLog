---
import { contatoInfo } from "../data/contato";
import ContatoInfo from "./ContatoInfo.astro";
import logoVetorizada from "../images/logo-vetorizada2.svg";
import Formulario from "./Formulario.astro";
---

<section id="contato" class="contato-section">
  <img src={logoVetorizada.src} class="logo-vetorizada" />

  <div class="contato-section--inner">
    <div class="wrapper">
      <div class="title-wrapper">
        <h2>Contato</h2>
        <p>
          Precisa de transporte confi√°vel? <br />Fale com a <span
            >HJLog Transporte</span
          >
        </p>
      </div>

      <div class="contato-info--wrapper">
        {
          contatoInfo?.map((info) => (
            <ContatoInfo label={info.label} icon={info.icon} />
          ))
        }
      </div>
    </div>

    <Formulario />
  </div>
</section>

<style>
  .contato-section {
    width: 100%;
    margin: 78px 0;
    position: relative;
  }

  .logo-vetorizada {
    position: absolute;
    top: -11%;
    left: 2%;
    opacity: 0.5;
    transform: scale(1.1);
  }

  .contato-section--inner {
    max-width: 83.5rem;
    margin: 0 auto;
    display: flex;
  }

  .wrapper {
    display: flex;
    flex-direction: column;
    gap: 60px;
  }

  .title-wrapper {
    display: flex;
    flex-direction: column;
    color: var(--tema-texto-claro-primario);
    gap: 20px;
  }

  .title-wrapper > h2 {
    font-size: var(--tamanho-fonte-titulo-principal);
  }

  .title-wrapper > p {
    color: var(--tema-texto-claro-terciario);
    font-size: var(--tamanho-fonte-texto-apoio);
  }

  .title-wrapper > p > span {
    font-weight: bold;
  }

  .contato-info--wrapper {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }
</style>
