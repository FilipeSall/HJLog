---
import Image from "astro/components/Image.astro";
import logo from "../images/logo.png";
import { externalLinks, internalLinks } from "../data/navigation";
import NavLink from "./NavLink.astro";
---

<header class="site-header">
  <div class="site-header__inner">
    <Image src={logo} alt="Logo" class="site-header__logo" />

    <nav class="site-header__nav site-header__nav--primary">
      {
        internalLinks.map((link) => (
          <NavLink path={link.path} label={link.label} />
        ))
      }
    </nav>

    <nav class="site-header__nav site-header__nav--secondary">
      {
        externalLinks.map((link) => (
          <NavLink path={link.path} label={link.label} target="_blank" />
        ))
      }
    </nav>
  </div>
</header>

<style>
  .site-header {
    background-color: var(--tema-fundo-header);
    color: var(--tema-texto-primario-claro);
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .site-header__inner {
    width: 100%;
    max-width: 1336px;
    display: grid;
    grid-template-columns: auto minmax(0, 1fr) auto;
    align-items: center;
    gap: clamp(1rem, 4vw, 3rem);
    padding-block: 1rem;
    padding-inline: clamp(1.5rem, 6vw, 8.75rem);
  }

  .site-header__nav {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: clamp(0.75rem, 1.125rem + 0.5vw, 1.5rem);
    justify-content: space-around;
  }
</style>
