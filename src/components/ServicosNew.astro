---
import { servicosNew } from "../data/servicos-new";
---

<section id="servicos" class="servicos-section">
  <div class="container">
    <div class="section-header">
      <div class="header-content">
        <h2 class="section-title">Nossas Soluções Logísticas</h2>
        <p class="section-description">
          Oferecemos um portfólio completo de serviços para atender as necessidades específicas da sua cadeia de suprimentos.
        </p>
      </div>
      <a href="#" class="view-all-link">
        Ver todos os serviços
        <span class="material-symbols-outlined">arrow_forward</span>
      </a>
    </div>

    <div class="services-grid">
      {servicosNew.map(servico => (
        <div class="service-card">
          <div class="service-image-container">
            <img
              src={servico.image}
              alt={servico.imageAlt}
              class="service-image"
            />
            <div class="service-icon-badge">
              <span class="material-symbols-outlined">{servico.icon}</span>
            </div>
          </div>
          <div class="service-content">
            <h3 class="service-title">{servico.title}</h3>
            <p class="service-description">{servico.text}</p>
            <a href="#" class="service-link">
              Saiba mais
              <span class="material-symbols-outlined">chevron_right</span>
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .servicos-section {
    width: 100%;
    padding: 5rem 0;
    background-color: var(--tema-fundo-base-claro);
  }

  .section-header {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  @media (min-width: 768px) {
    .section-header {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-end;
    }
  }

  .header-content {
    max-width: 600px;
  }

  .section-title {
    font-size: 1.875rem;
    font-weight: var(--peso-fonte-bold);
    color: var(--tema-texto-escuro-primario);
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  @media (min-width: 768px) {
    .section-title {
      font-size: 2.25rem;
    }
  }

  .section-description {
    font-size: 1.125rem;
    color: var(--tema-texto-secundario);
    line-height: 1.6;
  }

  .view-all-link {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    color: var(--tema-acao-destaque);
    font-weight: var(--peso-fonte-bold);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .view-all-link:hover {
    text-decoration: underline;
    text-underline-offset: 4px;
    text-decoration-thickness: 2px;
  }

  .view-all-link .material-symbols-outlined {
    font-size: 1rem;
  }

  .services-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .service-card {
    background-color: var(--paleta-branco-absoluto);
    border-radius: 1rem;
    border: 1px solid #f5f5f5;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .service-card:hover {
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    box-shadow: 0 20px 25px -5px rgba(255, 107, 0, 0.1);
  }

  .service-image-container {
    position: relative;
    height: 12rem;
    width: 100%;
    background-color: #f5f5f5;
    overflow: hidden;
  }

  .service-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .service-card:hover .service-image {
    transform: scale(1.05);
  }

  .service-icon-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background-color: var(--paleta-branco-absoluto);
    padding: 0.5rem;
    border-radius: 50%;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .service-icon-badge .material-symbols-outlined {
    color: var(--tema-acao-destaque);
    font-size: 1.5rem;
  }

  .service-content {
    padding: 1.5rem;
  }

  .service-title {
    font-size: 1.25rem;
    font-weight: var(--peso-fonte-bold);
    color: var(--tema-texto-escuro-primario);
    margin-bottom: 0.5rem;
  }

  .service-description {
    color: var(--tema-texto-secundario);
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .service-link {
    display: inline-flex;
    align-items: center;
    font-size: 0.875rem;
    font-weight: var(--peso-fonte-bold);
    color: var(--tema-texto-escuro-primario);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .service-card:hover .service-link {
    color: var(--tema-acao-destaque);
  }

  .service-link .material-symbols-outlined {
    font-size: 1rem;
    margin-left: 0.25rem;
  }
</style>
