---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  description: string;
  icon: string;
  image: ImageMetadata;
  imageAlt: string;
  isTopRow: boolean;
  isLeftCol: boolean;
  imagePosition?: "bottom" | "center";
}

const { title, description, icon, image, imageAlt, isTopRow, isLeftCol, imagePosition = "center" } = Astro.props;
---

<div
  class:list={[
    "service-card",
    isTopRow ? "service-card--top-row" : "",
    isLeftCol ? "service-card--left-col" : "",
  ]}
>
  <Image
    src={image}
    alt={imageAlt}
    class="service-card-image"
    width={800}
    height={600}
    style={imagePosition === "bottom" ? "object-position: bottom;" : ""}
  />
  <div class="service-card-overlay" />
  <div class="service-card-content">
    <div class="service-card-icon">
      <Icon name={icon} />
    </div>
    <h4 class="service-card-title">
      {title}
    </h4>
    <p class="service-card-description">
      {description}
    </p>
  </div>
</div>

<style>
  .service-card {
    position: relative;
    height: 320px;
    overflow: hidden;
  }

  .service-card--top-row {
    border-bottom: 1px solid var(--surface-dark);
  }

  .service-card--left-col {
    border-right: 1px solid var(--surface-dark);
  }

  .service-card-image {
    position: absolute;
    inset: 0;
    height: 100%;
    width: 100%;
    object-fit: cover;
    transition: transform 1200ms cubic-bezier(0.4, 0, 0.2, 1), opacity 800ms cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0.4;
  }

  .service-card:hover .service-card-image {
    transform: scale(1.1);
    opacity: 0.6;
  }

  .service-card-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      var(--background-dark),
      rgba(17, 17, 17, 0.6),
      transparent
    );
  }

  .service-card-content {
    position: absolute;
    bottom: 0;
    left: 0;
    padding: var(--space-8);
    width: 100%;
  }

  .service-card-icon {
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--space-4);
    background-color: var(--surface-dark);
    color: var(--text-primary-dark);
    border: 1px solid var(--border-dark);
    transition: background-color 600ms cubic-bezier(0.4, 0, 0.2, 1),
                color 600ms cubic-bezier(0.4, 0, 0.2, 1),
                border-color 600ms cubic-bezier(0.4, 0, 0.2, 1);
    font-size: var(--text-2xl);
  }

  .service-card-icon svg {
    width: 1em;
    height: 1em;
  }

  .service-card:hover .service-card-icon {
    background-color: var(--primary);
    color: var(--background-dark);
    border-color: var(--primary);
  }

  .service-card-title {
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    color: var(--text-primary-dark);
    text-transform: uppercase;
  }

  .service-card-description {
    color: var(--text-secondary-dark);
    font-size: var(--text-base);
    max-width: 28rem;
    margin-top: var(--space-2);
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    transform: translateY(-0.5rem);
    transition: max-height 800ms cubic-bezier(0.4, 0, 0.2, 1),
                opacity 600ms cubic-bezier(0.4, 0, 0.2, 1) 200ms,
                transform 600ms cubic-bezier(0.4, 0, 0.2, 1) 200ms;
  }

  .service-card:hover .service-card-description {
    max-height: 10rem;
    opacity: 1;
    transform: translateY(0);
  }
</style>
