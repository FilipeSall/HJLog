---
interface Props {
  title: string;
  description: string;
  icon: string;
  image: string;
  imageAlt: string;
  isTopRow: boolean;
  isLeftCol: boolean;
  imagePosition?: "bottom" | "center";
}

const { title, description, icon, image, imageAlt, isTopRow, isLeftCol, imagePosition = "center" } = Astro.props;
---

<div
  class:list={[
    "service-card",
    isTopRow ? "service-card--top-row" : "",
    isLeftCol ? "service-card--left-col" : "",
  ]}
>
  <img
    alt={imageAlt}
    class="service-card-image"
    src={image}
    style={imagePosition === "bottom" ? "object-position: bottom;" : ""}
  />
  <div class="service-card-overlay" />
  <div class="service-card-content">
    <div class="service-card-icon">
      <span class="material-symbols-outlined">
        {icon}
      </span>
    </div>
    <h4 class="service-card-title">
      {title}
    </h4>
    <p class="service-card-description">
      {description}
    </p>
  </div>
</div>

<style>
  .service-card {
    position: relative;
    height: 320px;
    overflow: hidden;
  }

  .service-card--top-row {
    border-bottom: 1px solid var(--surface-dark);
  }

  .service-card--left-col {
    border-right: 1px solid var(--surface-dark);
  }

  .service-card-image {
    position: absolute;
    inset: 0;
    height: 100%;
    width: 100%;
    object-fit: cover;
    transition: transform 700ms cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0.4;
  }

  .service-card:hover .service-card-image {
    transform: scale(1.1);
    opacity: 0.6;
  }

  .service-card-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      var(--background-dark),
      rgba(17, 17, 17, 0.6),
      transparent
    );
  }

  .service-card-content {
    position: absolute;
    bottom: 0;
    left: 0;
    padding: var(--space-8);
    width: 100%;
  }

  .service-card-icon {
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--space-4);
    background-color: var(--surface-dark);
    color: var(--text-primary-dark);
    border: 1px solid var(--border-dark);
    transition: background-color var(--transition-base), color var(--transition-base),
      border-color var(--transition-base);
    font-size: var(--text-2xl);
  }

  .service-card:hover .service-card-icon {
    background-color: var(--primary);
    color: var(--background-dark);
    border-color: var(--primary);
  }

  .service-card-title {
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    color: var(--text-primary-dark);
    text-transform: uppercase;
    margin-bottom: var(--space-2);
  }

  .service-card-description {
    color: var(--text-secondary-dark);
    font-size: var(--text-sm);
    max-width: 28rem;
    opacity: 0;
    transform: translateY(1rem);
    transition: opacity var(--transition-base), transform var(--transition-base);
  }

  .service-card:hover .service-card-description {
    opacity: 1;
    transform: translateY(0);
  }
</style>
