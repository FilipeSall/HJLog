---
import { Image } from "astro:assets";
import heroImage from "../../../images/carga.webp";

interface Props {
  tagline: string;
  title: string;
  description: string;
}

const { tagline, title, description } = Astro.props;
---

<section class="about-hero">
  <div class="hero-background">
    <Image
      src={heroImage}
      alt="Carga dedicada em transporte especializado"
      class="hero-image"
      loading="eager"
      decoding="async"
      width={1600}
      height={1200}
    />
    <div class="hero-gradient-vertical"></div>
    <div class="hero-gradient-horizontal"></div>
  </div>

  <div class="hero-content">
    <div class="hero-tagline-group">
      <div class="tagline-line"></div>
      <span class="hero-tagline">{tagline}</span>
      <div class="tagline-line"></div>
    </div>

    <h1 class="hero-title">
      {title.split(' ')[0]} <span class="title-accent">{title.split(' ')[1]}</span>
    </h1>

    <p class="hero-description">
      {description}
    </p>
  </div>
</section>

<style>
  .about-hero {
    position: relative;
    width: 100%;
    height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--background-dark);
    overflow: hidden;
  }

  /* Background Layer */
  .hero-background {
    position: absolute;
    inset: 0;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.4;
  }

  .hero-gradient-vertical {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      var(--background-dark) 0%,
      rgba(17, 17, 17, 0.9) 30%,
      rgba(17, 17, 17, 0.7) 50%,
      rgba(17, 17, 17, 0.4) 70%,
      rgba(17, 17, 17, 0.2) 90%,
      var(--background-dark) 100%
    );
  }

  .hero-gradient-horizontal {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to right,
      rgba(17, 17, 17, 0.8),
      transparent,
      rgba(17, 17, 17, 0.8)
    );
  }

  /* Content Layer */
  .hero-content {
    position: relative;
    z-index: 10;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 0 var(--space-4);
    max-width: 64rem;
    margin: 0 auto;
    padding-top: 2.5rem;
  }

  .hero-tagline-group {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-6);
  }

  .tagline-line {
    height: 2px;
    width: 3rem;
    background-color: var(--primary);
  }

  .hero-tagline {
    color: var(--primary);
    font-size: var(--text-xs);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-family: var(--font-display);
  }

  .hero-title {
    font-size: clamp(3rem, 8vw, 4.5rem);
    font-weight: var(--font-black);
    color: var(--text-primary-dark);
    margin-bottom: var(--space-6);
    font-family: var(--font-display);
    line-height: var(--leading-tight);
    letter-spacing: var(--tracking-tight);
    text-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
  }

  .title-accent {
    color: var(--primary);
  }

  .hero-description {
    color: var(--text-secondary-dark);
    font-size: var(--text-lg);
    font-weight: var(--font-normal);
    max-width: 32rem;
    margin: 0 auto;
    font-family: var(--font-body);
    line-height: var(--leading-relaxed);
    text-shadow: 0 10px 25px rgba(0, 0, 0, 0.5);
  }

  @media (min-width: 768px) {
    .hero-description {
      font-size: var(--text-xl);
    }
  }
</style>
