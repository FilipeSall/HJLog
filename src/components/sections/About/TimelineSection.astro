---
import type { TimelineEvent } from "../../../types/components";
import TimelineItem from "./TimelineItem.astro";

interface Props {
  title: string;
  events: TimelineEvent[];
}

const { title, events } = Astro.props;
---

<section class="timeline-section">
  <div class="timeline-divider-top"></div>
  <div class="timeline-container">
    <h2 class="timeline-title">{title}</h2>
    <div class="timeline-grid">
      {events.map((event, index) => (
        <TimelineItem {...event} index={index} />
      ))}
    </div>
  </div>
</section>

<style>
  .timeline-section {
    padding: 6rem var(--space-4);
    background-color: var(--background-dark);
    position: relative;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .timeline-section {
      padding: 6rem var(--space-20);
    }
  }

  .timeline-divider-top {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: linear-gradient(
      to right,
      transparent,
      var(--surface-dark),
      transparent
    );
  }

  .timeline-container {
    max-width: 50rem;
    margin: 0 auto;
    position: relative;
    z-index: 10;
  }

  .timeline-title {
    color: var(--text-primary-dark);
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    text-align: center;
    margin-bottom: var(--space-16);
    font-family: var(--font-display);
  }

  @media (min-width: 768px) {
    .timeline-title {
      font-size: var(--text-4xl);
    }
  }

  .timeline-grid {
    display: grid;
    grid-template-columns: 60px 1fr;
    gap: 0 var(--space-8);
    padding: 0 var(--space-4);
  }
</style>

<script is:inline>
  const initTimelineObserver = () => {
    const items = Array.from(document.querySelectorAll("[data-timeline-item]"));
    if (!items.length) return;
    const timelineGrid = document.querySelector(".timeline-grid");
    let cascadeStarted = false;
    let cascadeTimeouts = [];

    const revealEntry = (index) => {
      const item = items[index];
      if (!item) return;
      if (item.classList.contains("is-visible")) return;
      item.classList.add("is-visible");

      const marker = item.previousElementSibling;
      if (
        marker instanceof HTMLElement &&
        marker.dataset.timelineMarker !== undefined
      ) {
        marker.classList.add("is-visible");
      }
    };

    const revealAll = () => {
      cascadeTimeouts.forEach((timeoutId) => clearTimeout(timeoutId));
      cascadeTimeouts = [];
      items.forEach((_, index) => revealEntry(index));
    };

    const scheduleCascade = () => {
      if (cascadeStarted) return;
      cascadeStarted = true;
      const staggerDelay = 200;
      items.forEach((_, index) => {
        cascadeTimeouts.push(
          window.setTimeout(() => revealEntry(index), index * staggerDelay)
        );
      });

      if (timelineGrid) {
        const timelineBottomPosition =
          window.scrollY + timelineGrid.getBoundingClientRect().bottom;

        const handleScroll = () => {
          const viewportBottom = window.scrollY + window.innerHeight;
          if (viewportBottom >= timelineBottomPosition - 50) {
            revealAll();
            window.removeEventListener("scroll", handleScroll);
          }
        };

        window.addEventListener("scroll", handleScroll, { passive: true });
      }
    };

    const observer = new IntersectionObserver(
      (entries, observerInstance) => {
        entries.forEach((entry) => {
          if (!entry.isIntersecting) return;
          scheduleCascade();
          observerInstance.disconnect();
        });
      },
      {
        threshold: 0.2,
        rootMargin: "0px 0px -50px 0px",
      }
    );

    items.forEach((item) => observer.observe(item));
  };

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initTimelineObserver, {
      once: true,
    });
  } else {
    initTimelineObserver();
  }
</script>
