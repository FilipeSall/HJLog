---
import { Icon } from "astro-icon/components";

interface Props {
  year: string;
  title: string;
  description: string;
  icon: string | null;
  isHighlight: boolean;
  index: number;
}

const { year, title, description, icon, isHighlight, index } = Astro.props;
---

<!-- Coluna do marcador da linha do tempo -->
<div
  class="timeline-marker-col"
  data-timeline-marker
  style={`--delay: ${index * 350}ms;`}
>
  {
    isHighlight && icon ? (
      <>
        {year === "2023" && <div class="marker-line-top-gradient" />}
        {year === "2010" && <div class="marker-line-connector" />}
        <div
          class={`marker-icon ${year === "2023" ? "marker-icon-trophy" : ""}`}
        >
          <Icon name={`mdi:${icon}`} class="icon" />
        </div>
        {year === "2010" && <div class="marker-line-gradient" />}
      </>
    ) : (
      // Evento regular sem ícone (eventos intermediários)
      <>
        <div class="marker-line-top" />
        <div class="marker-dot">
          <div class="dot-inner" />
        </div>
        <div class="marker-line-bottom" />
      </>
    )
  }
</div>

<!-- Coluna do conteúdo da linha do tempo -->
<div
  class="timeline-content-col timeline-content"
  style={`--delay: ${index * 350}ms;`}
  data-timeline-item
>
  <div class="content-header">
    <span class={`year ${isHighlight ? "highlight" : ""}`}>{year}</span>
    <h3 class={`event-title ${isHighlight ? "highlight" : ""}`}>{title}</h3>
  </div>
  <p class="event-description">{description}</p>
</div>

<style>
  .timeline-marker-col {
    display: flex;
    flex-direction: column;
    align-items: center;
    opacity: 0;
    transform: translateY(1rem);
    transition: opacity 0.6s ease, transform 0.6s ease;
    transition-delay: var(--delay, 0ms);
  }

  .timeline-marker-col.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  .marker-line-connector {
    width: 2px;
    height: 0.5rem;
    background-color: transparent;
    transform-origin: top;
    transform: scaleY(0);
  }


  .marker-icon {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 0;
    background-color: var(--primary);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    box-shadow: 0 10px 15px -3px rgba(236, 127, 19, 0.2);
    transform: scale(0.85);
    opacity: 0;
    transition:
      opacity 0.4s ease,
      transform 0.4s ease;
    transition-delay: calc(var(--delay, 0ms) + 120ms);
  }

  .marker-icon-trophy {
    width: 3rem;
    height: 3rem;
    background-color: var(--surface-dark);
    border: 2px solid var(--primary);
    box-shadow: 0 0 20px rgba(236, 127, 19, 0.2);
  }

  .marker-icon .icon {
    color: var(--text-primary-dark);
    font-size: 1.125rem;
    width: 1.125rem;
    height: 1.125rem;
  }

  .marker-icon-trophy .icon {
    color: var(--primary);
    font-size: 1.25rem;
    width: 1.25rem;
    height: 1.25rem;
  }

  .marker-line-gradient {
    width: 2px;
    background: linear-gradient(to bottom, var(--primary), var(--surface-dark));
    flex: 1;
    min-height: 6.25rem;
    transform-origin: top;
    transform: scaleY(0);
  }

  .marker-line-top-gradient {
    width: 2px;
    background: linear-gradient(to bottom, var(--surface-dark), var(--primary));
    height: 7.5rem;
    margin-top: -6.75rem;
    transform-origin: bottom;
    transform: scaleY(0);
  }

  .marker-line-top {
    width: 2px;
    height: 2rem;
    background-color: var(--surface-dark);
    transform-origin: top;
    transform: scaleY(0);
  }

  .marker-line-bottom {
    width: 2px;
    background-color: var(--surface-dark);
    flex: 1;
    min-height: 6.25rem;
    transform-origin: top;
    transform: scaleY(0);
  }

  .marker-dot {
    width: 2rem;
    height: 2rem;
    border-radius: 0;
    background-color: var(--surface-dark);
    border: 2px solid var(--surface-dark);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    opacity: 0;
    transform: translateY(0.75rem);
    transition:
      opacity 0.4s ease,
      transform 0.4s ease;
    transition-delay: calc(var(--delay, 0ms) + 150ms);
  }

  .timeline-marker-col.is-visible .marker-line-connector,
  .timeline-marker-col.is-visible .marker-line-top,
  .timeline-marker-col.is-visible .marker-line-bottom,
  .timeline-marker-col.is-visible .marker-line-gradient {
    animation: lineGrow 0.75s ease forwards;
    animation-delay: var(--delay, 0ms);
  }

  .timeline-marker-col.is-visible .marker-line-top-gradient {
    animation: lineGrowReverse 0.75s ease forwards;
    animation-delay: var(--delay, 0ms);
  }

  .timeline-marker-col.is-visible .marker-icon {
    opacity: 1;
    transform: scale(1);
  }

  .timeline-marker-col.is-visible .marker-dot {
    opacity: 1;
    transform: translateY(0);
  }

  .dot-inner {
    width: 0.5rem;
    height: 0.5rem;
    background-color: var(--text-muted-dark);
    border-radius: 0;
  }

  .timeline-content-col {
    display: flex;
    flex-direction: column;
    padding-bottom: var(--space-12);
    padding-top: 0.125rem;
  }

  .content-header {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    margin-bottom: var(--space-3);
  }

  @media (min-width: 768px) {
    .content-header {
      flex-direction: row;
      align-items: center;
      gap: var(--space-4);
    }
  }

  .year {
    color: var(--text-muted-dark);
    font-weight: var(--font-bold);
    font-size: var(--text-xl);
    font-family: var(--font-display);
  }

  .year.highlight {
    color: var(--primary);
    font-weight: var(--font-black);
    font-size: var(--text-2xl);
  }

  .event-title {
    color: var(--text-primary-dark);
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    font-family: var(--font-display);
  }

  .event-title.highlight {
    font-size: var(--text-xl);
  }

  .event-description {
    color: var(--text-muted-dark);
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
    font-family: var(--font-body);
  }

  /* Animation */
  .timeline-content {
    opacity: 0;
    transform: translateX(2rem);
    transition:
      opacity 0.6s ease-out,
      transform 0.6s ease-out;
    transition-delay: var(--delay, 0ms);
  }

  .timeline-content.is-visible {
    opacity: 1;
    transform: translateX(0);
  }

  @keyframes lineGrow {
    from {
      transform: scaleY(0);
    }

    to {
      transform: scaleY(1);
    }
  }

  @keyframes lineGrowReverse {
    from {
      transform: scaleY(0);
    }

    to {
      transform: scaleY(1);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .timeline-marker-col,
    .timeline-marker-col .marker-icon,
    .timeline-marker-col .marker-dot,
    .timeline-content {
      opacity: 1;
      transform: none;
      transition: none;
    }

    .marker-line-connector,
    .marker-line-top,
    .marker-line-bottom,
    .marker-line-gradient,
    .marker-line-top-gradient {
      transform: none;
      animation: none;
    }
  }
</style>
