---
import { Icon } from "astro-icon/components";

interface Partner {
  icon: string;
  name: string;
}

interface Props {
  title: string;
  partners: Partner[];
}

const { title, partners } = Astro.props;
---

<div class="cta-partners-section">
  <p class="cta-partners-title">
    {title}
  </p>

  <div class="cta-partners-grid">
    {
      partners.map((partner) => (
        <div class="cta-partner-item">
          <Icon name={partner.icon} />{" "}
          {partner.name}
        </div>
      ))
    }
  </div>
</div>

<style>
  /* Seção de parceiros */
  .cta-partners-section {
    padding-top: var(--space-8);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .cta-partners-title {
    font-size: var(--text-xs);
    font-weight: var(--font-bold);
    color: var(--text-secondary-dark);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    margin-bottom: var(--space-8);
    font-family: var(--font-display);
  }

  /* Grade de parceiros */
  .cta-partners-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-8);
    opacity: 0.4;
    filter: grayscale(100%);
    transition: all var(--transition-slow);
  }

  .cta-partners-grid:hover {
    opacity: 0.4;
    filter: grayscale(0%);
  }

  /* Item de parceiro */
  .cta-partner-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--text-primary-dark);
    font-weight: var(--font-bold);
    font-size: var(--text-lg);
    font-family: var(--font-display);
  }

  .cta-partner-item svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  /* Design responsivo */
  @media (min-width: 768px) {
    .cta-partners-grid {
      gap: var(--space-16);
    }
  }
</style>
