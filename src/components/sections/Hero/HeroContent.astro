---
import HeroCtaGroup from "./HeroCtaGroup.astro";

export interface HeroContentProps {
  tagline: string;
  title: {
    line1: string;
    line2: string;
    line3: string;
  };
  description: string;
  cta: {
    primary: { href: string; label: string };
    secondary: { href: string; label: string };
  };
}

const { tagline, title, description, cta } = Astro.props;
---
<div class="hero-content">
  <div class="hero-content-wrapper">
    <div class="hero-tagline-group">
      <div class="hero-tagline-bar"></div>
      <span class="hero-tagline">{tagline}</span>
    </div>

    <h1 class="hero-title">
      {title.line1}<br />
      <span class="hero-title-accent">{title.line2}</span><br />
      {title.line3}
    </h1>

    <p class="hero-description">
      {description}
    </p>

    <HeroCtaGroup primary={cta.primary} secondary={cta.secondary} />
  </div>
</div>

<style>
  .hero-content {
    position: relative;
    z-index: 20;
    width: 100%;
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 var(--space-4);
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex: 1;
  }

  @media (min-width: 640px) {
    .hero-content {
      padding: 0 var(--space-6);
    }
  }

  @media (min-width: 1024px) {
    .hero-content {
      padding: 0 var(--space-8);
    }
  }

  .hero-content-wrapper {
    max-width: 48rem;
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
    padding-top: var(--space-12);
  }

  .hero-tagline-group {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .hero-tagline-bar {
    height: 0.25rem;
    width: 3rem;
    background-color: var(--primary);
  }

  .hero-tagline {
    font-size: var(--text-xs);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--primary);
  }

  .hero-title {
    font-family: var(--font-display);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    line-height: var(--leading-tight);
    letter-spacing: var(--tracking-tight);
    color: var(--text-primary-dark);
    font-size: clamp(3rem, 5vw, 4.5rem);
  }

  .hero-title-accent {
    color: var(--white);
  }

  .hero-description {
    max-width: 36rem;
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--text-secondary-dark);
    font-family: var(--font-body);
    border-left: 4px solid var(--surface-dark);
    padding-left: var(--space-6);
  }
</style>
