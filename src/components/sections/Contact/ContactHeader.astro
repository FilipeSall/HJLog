---
import heroImage from "../../../images/caminhao-hero.png";
import faleConoscoImage from "../../../images/faleconosco.jpg";
import { Image } from "astro:assets";

interface Props {
  tagline: string;
  title: {
    line1: string;
    line2: string;
  };
  description: string;
}

const { tagline, title, description } = Astro.props;
---

<header class="contact-header">
  <div class="contact-header-background">
    <div class="background-base"></div>
    <div class="background-image-container">
      <div class="background-overlay"></div>
      <Image
        src={heroImage}
        alt="Background Texture"
        class="background-image"
        loading="eager"
        decoding="async"
        width={1920}
        height={1080}
      />
    </div>
    <div class="background-gradient">
      <Image
        src={faleConoscoImage}
        alt="Fale Conosco Background"
        class="gradient-image"
        loading="eager"
        decoding="async"
        width={1920}
        height={1080}
      />
    </div>
  </div>

  <div class="contact-header-content">
    <div class="tagline-group">
      <div class="tagline-bar"></div>
      <span class="tagline">{tagline}</span>
    </div>

    <h1 class="title">
      {title.line1} <span class="title-accent">{title.line2}</span>
    </h1>

    <p class="description">
      {description}
    </p>
  </div>
</header>

<style>
  .contact-header {
    position: relative;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    background-color: var(--background-dark);
    padding-top: 8rem;
    padding-bottom: 5rem;
    border-bottom: 1px solid var(--surface-dark);
  }

  /* Background Styles */
  .contact-header-background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .background-base {
    position: absolute;
    inset: 0;
    background-color: var(--background-dark);
    z-index: 0;
  }

  .background-image-container {
    position: absolute;
    top: 0;
    right: 0;
    height: 100%;
    width: 100%;
    z-index: 0;
    transform: translateX(3rem) skewX(-6deg);
    transform-origin: bottom right;
    overflow: hidden;
  }

  @media (min-width: 1024px) {
    .background-image-container {
      width: 65%;
      transform: translateX(0) skewX(-6deg);
    }
  }

  .background-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to left,
      transparent,
      rgba(17, 17, 17, 0.4),
      var(--background-dark)
    );
    z-index: 10;
    transform: skewX(6deg) scale(1.25);
  }

  .background-image {
    height: 100%;
    width: 100%;
    object-fit: cover;
    filter: grayscale(100%);
    opacity: 0.4;
    transform: skewX(6deg) scale(1.25);
  }

  .background-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to right,
      var(--background-dark),
      rgba(17, 17, 17, 0.95),
      transparent
    );
    z-index: 10;
  }

  .gradient-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.3;
    z-index: -1;
  }

  /* Content Styles */
  .contact-header-content {
    position: relative;
    z-index: 20;
    width: 100%;
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 var(--space-4);
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  @media (min-width: 640px) {
    .contact-header-content {
      padding: 0 var(--space-6);
    }
  }

  @media (min-width: 1024px) {
    .contact-header-content {
      padding: 0 var(--space-8);
    }
  }

  .tagline-group {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
  }

  .tagline-bar {
    height: 0.25rem;
    width: 3rem;
    background-color: var(--primary);
  }

  .tagline {
    font-size: var(--text-xs);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--primary);
  }

  .title {
    font-family: var(--font-display);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    line-height: var(--leading-tight);
    letter-spacing: var(--tracking-tight);
    color: var(--text-primary-dark);
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: var(--space-4);
  }

  .title-accent {
    color: var(--primary);
  }

  .description {
    max-width: 36rem;
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--text-secondary-dark);
    font-family: var(--font-body);
  }
</style>
