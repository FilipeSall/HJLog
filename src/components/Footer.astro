      <!-- Contact -->
      <div class="contact-section">
        <h3>Contato</h3>
        <ul>
          <li class="contact-item">
            <span class="material-symbols-outlined">location_on</span>
            <span>Avenida Dep Emilio Carlos 114 Sala 08 Limão - São Paulo/SP - 02720-000</span>
