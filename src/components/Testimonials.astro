---
import { testimonials } from "../data/testimonials";
---

<section class="testimonials-section">
  <div class="container">
    <h2 class="section-title">O que nossos clientes dizem</h2>

    <div class="testimonials-grid">
      {testimonials.map(testimonial => (
        <div class="testimonial-card">
          <span class="quote-icon material-symbols-outlined">format_quote</span>
          <div class="testimonial-content">
            <div class="stars">
              {[1, 2, 3, 4, 5].map(() => (
                <span class="material-symbols-outlined star">star</span>
              ))}
            </div>
            <p class="testimonial-quote">{testimonial.quote}</p>
            <div class="testimonial-author">
              <div class="author-avatar">
                <img src={testimonial.avatar} alt={`Foto de ${testimonial.author}`} />
              </div>
              <div class="author-info">
                <h4 class="author-name">{testimonial.author}</h4>
                <p class="author-role">{testimonial.role}, {testimonial.company}</p>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .testimonials-section {
    width: 100%;
    padding: 5rem 0;
    background-color: var(--paleta-branco-absoluto);
  }

  .section-title {
    font-size: 1.875rem;
    font-weight: var(--peso-fonte-bold);
    color: var(--tema-texto-escuro-primario);
    text-align: center;
    margin-bottom: 3rem;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .testimonials-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .testimonials-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .testimonial-card {
    position: relative;
    padding: 2rem;
    border-radius: 1.5rem;
    background-color: var(--tema-fundo-base-claro);
  }

  .quote-icon {
    position: absolute;
    top: 2rem;
    left: 2rem;
    font-size: 2.5rem;
    color: #e5e5e5;
  }

  .testimonial-content {
    position: relative;
    z-index: 10;
    padding-top: 2rem;
  }

  .stars {
    display: flex;
    gap: 0.25rem;
    margin-bottom: 1rem;
  }

  .star {
    color: var(--tema-acao-destaque);
    font-size: 1rem;
  }

  .testimonial-quote {
    color: #404040;
    font-style: italic;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .author-avatar {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background-color: #d4d4d4;
    overflow: hidden;
    flex-shrink: 0;
  }

  .author-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .author-name {
    font-weight: var(--peso-fonte-bold);
    color: var(--tema-texto-escuro-primario);
    font-size: 0.875rem;
  }

  .author-role {
    font-size: 0.75rem;
    color: var(--tema-texto-secundario);
  }
</style>
