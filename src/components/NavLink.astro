---
import type { NavLinkProps } from "../types/components";

export type Props = NavLinkProps;

const { label, path } = Astro.props as Props;
---

<a href={path}>
  {typeof label === "string" ? label : <img src={label.src} alt={label.alt} />}
</a>

<style>
  a {
    text-decoration: none;
    color: inherit;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-family: var(--tipografia-fonte-primaria);
    font-weight: var(--peso-fonte-semibold);
    font-size: clamp(0.875rem, 0.75rem + 0.5vw, 1rem);
    line-height: var(--altura-linha-compacta);
    transition: opacity 0.2s ease;
  }

  img {
    height: clamp(1.25rem, 0.75rem + 1vw, 1.75rem);
    width: auto;
  }
</style>
