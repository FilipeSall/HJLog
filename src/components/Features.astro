---
import { features } from "../data/features";
---

<section class="features-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Por que escolher a HJLOG?</h2>
      <p class="section-description">
        Segurança e tecnologia integradas para garantir a melhor experiência logística.
      </p>
    </div>

    <div class="features-grid">
      {features.map(feature => (
        <div class="feature-card">
          <div class="feature-icon">
            <span class="material-symbols-outlined">{feature.icon}</span>
          </div>
          <div class="feature-content">
            <h3 class="feature-title">{feature.title}</h3>
            <p class="feature-description">{feature.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .features-section {
    width: 100%;
    padding: 5rem 0;
    background-color: var(--tema-fundo-base-claro);
  }

  .section-header {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: 1.875rem;
    font-weight: var(--peso-fonte-bold);
    color: var(--tema-texto-escuro-primario);
    max-width: 45rem;
  }

  @media (min-width: 768px) {
    .section-title {
      font-size: 2.25rem;
    }
  }

  .section-description {
    font-size: 1.125rem;
    color: var(--tema-texto-secundario);
    max-width: 45rem;
    line-height: 1.6;
  }

  .features-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  @media (min-width: 640px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .feature-card {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1.5rem;
    border-radius: 1rem;
    background-color: var(--paleta-branco-absoluto);
    border: 1px solid #e5e5e5;
  }

  .feature-icon {
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    background-color: rgba(255, 107, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .feature-icon .material-symbols-outlined {
    color: var(--tema-acao-destaque);
    font-size: 1.5rem;
  }

  .feature-title {
    font-size: 1.125rem;
    font-weight: var(--peso-fonte-bold);
    color: var(--tema-texto-escuro-primario);
    margin-bottom: 0.25rem;
  }

  .feature-description {
    font-size: 0.875rem;
    color: var(--tema-texto-secundario);
    line-height: 1.6;
  }
</style>
