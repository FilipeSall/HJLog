---
import { hero } from "../data/hero";
---

<header class="hero-header">
  <div class="hero-background">
    <div class="hero-background-base"></div>
    <div class="hero-image-container">
      <div class="hero-image-overlay"></div>
      <img alt={hero.heroImageAlt} class="hero-image" src={hero.heroImage} />
    </div>
    <div class="hero-gradient-overlay"></div>
  </div>

  <div class="hero-content">
    <div class="hero-content-wrapper">
      <div class="hero-tagline-group">
        <div class="hero-tagline-bar"></div>
        <span class="hero-tagline">{hero.tagline}</span>
      </div>

      <h1 class="hero-title">
        {hero.title.line1}<br />
        <span class="hero-title-accent">{hero.title.line2}</span><br />
        {hero.title.line3}
      </h1>

      <p class="hero-description">
        {hero.description}
      </p>

      <div class="hero-cta-group">
        <a class="hero-cta-primary" href={hero.cta.primary.href}>
          {hero.cta.primary.label}
        </a>
        <a class="hero-cta-secondary" href={hero.cta.secondary.href}>
          {hero.cta.secondary.label}
          <span class="material-symbols-outlined hero-cta-icon"
            >arrow_outward</span
          >
        </a>
      </div>
    </div>
  </div>

  <div class="hero-steps-section">
    <div class="hero-steps-grid">
      {
        hero.steps.map((step, index) => (
          <div
            class:list={[
              "hero-step",
              index < hero.steps.length - 1 ? "hero-step-divider" : "",
            ]}
          >
            <div class="hero-step-icon">
              <span class="material-symbols-outlined">{step.icon}</span>
            </div>
            <h3 class="hero-step-title">{step.title}</h3>
            <p class="hero-step-description">{step.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</header>

<style>
  .hero-header {
    position: relative;
    display: flex;
    flex-direction: column;
    min-height: 90vh;
    overflow: hidden;
    background-color: var(--background-dark);
    padding-top: 8rem;
    padding-bottom: var(--space-12);
  }

  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-background-base {
    position: absolute;
    inset: 0;
    background-color: var(--background-dark);
    z-index: 0;
  }

  .hero-image-container {
    position: absolute;
    top: 0;
    right: 0;
    height: 100%;
    width: 100%;
    z-index: 0;
    transform: translateX(0) skewX(-6deg);
    transform-origin: bottom right;
  }

  @media (min-width: 1024px) {
    .hero-image-container {
      width: 90%;
      transform: translateX(-4rem) skewX(-6deg);
    }
  }

  .hero-image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      270deg,
      transparent,
      rgba(17, 17, 17, 0.2),
      var(--background-dark)
    );
    z-index: 10;
    transform: skewX(6deg) scale(1.1);
    pointer-events: none;
  }

  .hero-image {
    height: 95%;
    width: 100%;
    object-fit: cover;
    object-position: 15% center;
    filter: grayscale(75%);
    opacity: 0.8;
    transform: skewX(6deg) scale(1.1);
  }

  .hero-gradient-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
        90deg,
        rgba(17, 17, 17, 0.85),
        rgba(17, 17, 17, 0.4),
        transparent 50%
      ),
      linear-gradient(
        180deg,
        rgba(17, 17, 17, 0.85),
        rgba(17, 17, 17, 0.2),
        transparent 50%
      ),
      linear-gradient(
        0deg,
        rgba(17, 17, 17, 0.85),
        rgba(17, 17, 17, 0.2),
        transparent 60%
      );
    z-index: 10;
  }

  .hero-content {
    position: relative;
    z-index: 20;
    width: 100%;
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 var(--space-4);
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex: 1;
  }

  @media (min-width: 640px) {
    .hero-content {
      padding: 0 var(--space-6);
    }
  }

  @media (min-width: 1024px) {
    .hero-content {
      padding: 0 var(--space-8);
    }
  }

  .hero-content-wrapper {
    max-width: 48rem;
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
    padding-top: var(--space-12);
  }

  .hero-tagline-group {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .hero-tagline-bar {
    height: 0.25rem;
    width: 3rem;
    background-color: var(--primary);
  }

  .hero-tagline {
    font-size: var(--text-xs);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--primary);
  }

  .hero-title {
    font-family: var(--font-display);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    line-height: var(--leading-tight);
    letter-spacing: var(--tracking-tight);
    color: var(--text-primary-dark);
    font-size: clamp(3rem, 5vw, 4.5rem);
  }

  .hero-title-accent {
    color: var(--white);
  }

  .hero-description {
    max-width: 36rem;
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--text-secondary-dark);
    font-family: var(--font-body);
    border-left: 4px solid var(--surface-dark);
    padding-left: var(--space-6);
  }

  .hero-cta-group {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0;
    margin-top: var(--space-4);
  }

  .hero-cta-primary,
  .hero-cta-secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    height: 3.5rem;
    min-width: 12.5rem;
    padding: 0 var(--space-8);
    font-size: var(--text-sm);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    transition: all var(--transition-base);
  }

  .hero-cta-primary {
    background-color: var(--primary);
    color: var(--background-dark);
  }

  .hero-cta-primary:hover {
    background-color: var(--white);
    color: var(--black);
  }

  .hero-cta-secondary {
    background-color: var(--background-dark);
    border: 1px solid var(--surface-dark);
    color: var(--text-primary-dark);
  }

  .hero-cta-secondary:hover {
    background-color: var(--surface-dark);
  }

  .hero-cta-icon {
    margin-left: var(--space-2);
    font-size: var(--text-lg);
    transition: transform var(--transition-fast);
  }

  .hero-cta-secondary:hover .hero-cta-icon {
    transform: translateX(0.25rem);
  }

  .hero-steps-section {
    position: relative;
    z-index: 30;
    width: 100%;
    max-width: 80rem;
    margin: 0 auto;
    padding: var(--space-16) var(--space-4) 0;
    margin-top: auto;
  }

  @media (min-width: 640px) {
    .hero-steps-section {
      padding-left: var(--space-6);
      padding-right: var(--space-6);
    }
  }

  @media (min-width: 1024px) {
    .hero-steps-section {
      padding-left: var(--space-8);
      padding-right: var(--space-8);
    }
  }

  .hero-steps-grid {
    display: grid;
    grid-template-columns: 1fr;
    border-top: 1px solid var(--surface-dark);
  }

  @media (min-width: 768px) {
    .hero-steps-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .hero-step {
    padding: var(--space-8);
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
    background-color: rgba(17, 17, 17, 0.5);
    transition: background-color var(--transition-base);
  }

  .hero-step:hover {
    background-color: rgba(42, 42, 42, 0.8);
  }

  .hero-step-divider {
    border-right: 1px solid var(--surface-dark);
  }

  .hero-step-icon {
    margin-bottom: var(--space-4);
    color: var(--primary);
  }

  .hero-step-icon .material-symbols-outlined {
    font-size: var(--text-4xl);
  }

  .hero-step-title {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--text-primary-dark);
    text-transform: uppercase;
    margin-bottom: var(--space-2);
  }

  .hero-step-description {
    font-size: var(--text-sm);
    color: var(--text-secondary-dark);
  }
</style>
