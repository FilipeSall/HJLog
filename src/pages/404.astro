---
import MainLayoult from "../layouts/MainLayoult.astro";
import Header from "../components/layout/Header/Header.astro";
import Footer from "../components/layout/Footer/Footer.astro";
---

<MainLayoult>
  <Header />
  <main class="error-page">
    <div class="error-container">
      <div class="error-content">
        <div class="error-visual">
          <div class="error-number">404</div>
          <div class="error-icon">
            <svg
              width="80"
              height="80"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
              <circle cx="12" cy="12" r="3"></circle>
              <line x1="3" y1="21" x2="21" y2="3"></line>
            </svg>
          </div>
        </div>

        <div class="error-text">
          <h1 class="error-title">Rota não encontrada</h1>
          <p class="error-description">
            Parece que você se perdeu no caminho. A página que você está
            procurando não existe ou foi movida para outro endereço.
          </p>
        </div>

        <div class="error-actions">
          <a href="/" class="btn-primary">
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
              <polyline points="9 22 9 12 15 12 15 22"></polyline>
            </svg>
            Voltar para o início
          </a>

          <a href="/contato" class="btn-secondary">
            Entre em contato
          </a>
        </div>

        <div class="error-links">
          <p class="error-links-title">Links úteis:</p>
          <ul class="error-links-list">
            <li><a href="/">Início</a></li>
            <li><a href="/servicos">Serviços</a></li>
            <li><a href="/sobre">Sobre nós</a></li>
            <li><a href="/contato">Contato</a></li>
          </ul>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</MainLayoult>

<style>
  /* ========== Container principal ========== */
  .error-page {
    min-height: calc(100vh - 5rem);
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--background-dark);
    padding: var(--space-8) var(--space-4);
    padding-top: calc(5rem + var(--space-8));
  }

  .error-container {
    max-width: 48rem;
    width: 100%;
    margin: 0 auto;
  }

  .error-content {
    text-align: center;
  }

  /* ========== Visual do erro ========== */
  .error-visual {
    position: relative;
    margin-bottom: var(--space-12);
  }

  .error-number {
    font-family: var(--font-display);
    font-size: clamp(6rem, 20vw, 12rem);
    font-weight: var(--font-black);
    line-height: 1;
    color: var(--surface-dark);
    letter-spacing: var(--tracking-tight);
    user-select: none;
  }

  .error-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: var(--primary);
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  /* ========== Texto do erro ========== */
  .error-text {
    margin-bottom: var(--space-12);
  }

  .error-title {
    font-family: var(--font-display);
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    color: var(--text-primary-dark);
    margin-bottom: var(--space-4);
    letter-spacing: var(--tracking-tight);
  }

  .error-description {
    font-family: var(--font-body);
    font-size: var(--text-lg);
    color: var(--text-secondary-dark);
    line-height: var(--leading-relaxed);
    max-width: 36rem;
    margin: 0 auto;
  }

  /* ========== Ações do erro ========== */
  .error-actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    align-items: center;
    justify-content: center;
    margin-bottom: var(--space-16);
  }

  @media (min-width: 640px) {
    .error-actions {
      flex-direction: row;
    }
  }

  .btn-primary,
  .btn-secondary {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-4) var(--space-8);
    border-radius: var(--radius-default);
    font-family: var(--font-display);
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    transition: all var(--transition-base);
    text-decoration: none;
    width: 100%;
    justify-content: center;
  }

  @media (min-width: 640px) {
    .btn-primary,
    .btn-secondary {
      width: auto;
    }
  }

  .btn-primary {
    background-color: var(--primary);
    color: var(--background-dark);
    border: 2px solid var(--primary);
  }

  .btn-primary:hover {
    background-color: transparent;
    color: var(--primary);
    transform: translateY(-2px);
    box-shadow: 0 0 20px rgba(255, 107, 0, 0.3);
  }

  .btn-primary svg {
    width: 20px;
    height: 20px;
  }

  .btn-secondary {
    background-color: transparent;
    color: var(--text-primary-dark);
    border: 2px solid var(--surface-dark);
  }

  .btn-secondary:hover {
    background-color: var(--surface-dark);
    border-color: var(--primary);
    color: var(--primary);
    transform: translateY(-2px);
  }

  /* ========== Links úteis ========== */
  .error-links {
    padding-top: var(--space-12);
    border-top: 1px solid var(--surface-dark);
  }

  .error-links-title {
    font-family: var(--font-display);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--text-secondary-dark);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    margin-bottom: var(--space-4);
  }

  .error-links-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-6);
    justify-content: center;
    list-style: none;
  }

  .error-links-list a {
    font-family: var(--font-body);
    font-size: var(--text-base);
    color: var(--text-secondary-dark);
    text-decoration: none;
    transition: color var(--transition-base);
    position: relative;
  }

  .error-links-list a::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--primary);
    transition: width var(--transition-base);
  }

  .error-links-list a:hover {
    color: var(--primary);
  }

  .error-links-list a:hover::after {
    width: 100%;
  }

  /* ========== Responsividade ========== */
  @media (min-width: 768px) {
    .error-page {
      padding: var(--space-16) var(--space-8);
    }

    .error-title {
      font-size: var(--text-5xl);
    }

    .error-description {
      font-size: var(--text-xl);
    }
  }
</style>
